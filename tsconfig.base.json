{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "noEmitOnError": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "types": ["vitest/globals"]
  }
}
