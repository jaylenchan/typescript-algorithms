{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "noEmitOnError": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "algorithms/*": [
        "src/algorithms/*"
      ],
      "data-structure/*": [
        "src/data-structure/*"
      ],
      "helper/*": [
        "src/helper/*"
      ],
      "leetcode/*": [
        "src/leetcode/*"
      ]
    }
  }
}